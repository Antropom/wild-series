{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    <h1>Liste des acteurs</h1>
    <ul>
        {% for actor in actors %}
            <li>
                <a href="{{ path('actor_show', { id: actor.id} ) }}">{{ actor.name }}</a>
            </li>
        {% else %}
            <li>Aucun acteur</li>
        {% endfor %}
    </ul>
{% endblock %}

