{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <h1>{{ actor.name }}</h1>
    <ul>
        {% for program in actor.programs %}
            <li>{{ program.title }}</li>
        {% else %}
            <li>Cet acteur n'a jamais joué une série</li>
        {% endfor %}
    </ul>
{% endblock %}