<form method="post" action="{{ path('program_delete_comment', {'program_slug': program.slug, 'season': season.id, 'episode_slug': episode.slug, 'comment': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn">Delete</button>
</form>
