{% extends 'base.html.twig' %}

{% block title %}
    {{ program.title }} saison {{ season.number }}
{% endblock %}

{% block body %}
    <div class="p-3">
        {% for episode in episodes %}
            <h2>Épisode {{ episode.number }} : {{ episode.title }}</h2>
            <p>{{ episode.synopsis }}</p>
            <a href="{{ path('program_episode_show', {"program_slug": program.slug, "season": season.id, "episode_slug": episode.slug}) }}">Voir
                l'épisode</a>
        {% else %}
            <h2>Aucun épisode pour cette série</h2>
        {% endfor %}
    </div>
{% endblock %}


